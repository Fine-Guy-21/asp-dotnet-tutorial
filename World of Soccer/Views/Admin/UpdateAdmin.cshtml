@using World_of_Soccer.Models;
@model User
@{
    ViewData["Title"] = "UPDATE USER";
    string? Id = ViewData["id"] as string; 
}

<h1 class="bg-dark text-white">Update User</h1>


<div asp-validation-summary="All" class="text-danger"></div>
<form method="post" asp-controller="Admin" asp-action="UpdateAdmin">

    <div class="form-group">
        <label asp-for="@Id" disabled>Id</label>
        <input asp-for="@Id" class="form-control" value="@Id" disabled />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" value="@Model.Email" />
    </div>
     <div class="form-group">
        <label asp-for="Password" hidden ></label>
    <input asp-for="Password" class="form-control" hidden disabled/>
    </div> 
    <br />

    <div class="row">
        <div class="col-3">
            <button type="submit" class="btn btn-outline-success">Update</button>
            <a asp-action="Index" asp-controller="Admin"
               class="btn btn-outline-danger">Back</a>
        </div>
        
    </div>
     

</form>